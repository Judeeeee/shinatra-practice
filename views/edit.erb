<div class="edit-container">
  <form  method="POST" action="/memos/<%= @memo_id %>">
    <h2>メモタイトルを入力:</h2>
    <textarea name="memo_title" rows="8" cols="80"><%= html_escape(@memo["title"]) %></textarea>
    <p>メモの内容を入力</p>
    <textarea name="memo_text" rows="8" cols="80"><%= html_escape(@memo["sentence"]) %></textarea>
    <input id="hidden" type="hidden" name="_method" value="patch">
    <input type="submit" value="変更" class="button add" method="PATCH">
  </form>
</div>
